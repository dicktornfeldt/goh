  {# this is for counting roles #}
  {% set healers = 0 %}
  {% set tanks = 0 %}
  {% set dps = 0 %}

  {% for attende in attenders %}
    {% if 'Healer' in attende.anvandare.role %}
      {% set healers = healers + 1 %}
    {% endif %}
    {% if 'Tank' in attende.anvandare.role %}
      {% set tanks = tanks + 1 %}
    {% endif %}
    {% if 'DPS' in attende.anvandare.role %}
      {% set dps = dps + 1 %}
    {% endif %}
  {% endfor %}

