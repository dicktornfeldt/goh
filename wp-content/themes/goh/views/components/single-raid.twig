{% set user_id = current_user.ID %}

{% set attenders = raid.meta('attendance_list') %}

{% set attende_status = 'Nej' %}

{% for attende in attenders %}
  {% if attende.anvandare.ID == user_id %}
    {% set attende_status = attende.narvaro %}
  {% endif %}
{% endfor %}

